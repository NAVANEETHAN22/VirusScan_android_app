<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.virusscan">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.VirusScan"
        tools:targetApi="31">

        <activity
            android:name=".StartActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ScanOptionsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true" />

        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true" />

        <activity
            android:name=".LinkScannerActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true" />

        <activity
            android:name=".SQLInjectionActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true" />

        <activity
            android:name=".XSSActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true" />






        <!-- Add other activity declarations if needed -->

    </application>

</manifest>
